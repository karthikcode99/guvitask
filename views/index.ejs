<% layout('layouts/boilerplate')%>
<h1 class="text-center">Personal details </details></h1>
    <div class="col-6 offset-3">
        <form action="/Alldetails" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="name"> Name</label>
                <input class="form-control" type="text" id="name" name="name" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="age">Age</label>
                <input class="form-control" type="number" id="age" value="18" name="age" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="gender">Gender</label>
                <input class="form-control" type="text" id="gender" name="gender" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-group"> 
                    <label class="control-label" for="dob">Date of birth</label>
                    <input class="form-control" id="dob" name="dob" placeholder="MM/DD/YYY" type="text"/>
                  </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="mb-3">
                    <label class="form-label" for="mobile">Mobile no</label>
                    <input class="form-control" type="number" id="mobile" name="mobile" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mt-3">
                    <button class="btn btn-success">submit</button>
                </div>
             </div>   
     </div>